<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_istg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.adanibo.connectest.IstgActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:id="@+id/instagram_login"
        android:layout_weight="1"
        android:layout_marginBottom="1dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/instagram_brackground">

            <ImageView
                android:id="@+id/instagram_icon"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:src="@drawable/instagram_icon48"
                android:layout_centerVertical="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login_instagram"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:id="@+id/instagram_share"
        android:layout_weight="1"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/instagram_brackground">

            <ImageView
                android:id="@+id/instagram_share_icon"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:src="@drawable/instagram_icon48"
                android:layout_centerVertical="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/share_instagram"
                android:textSize="25sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
